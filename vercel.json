{
  "version": 2,
  "buildCommand": "cd standalone && npm install && npm run build && mkdir -p ../public/dashboard && cp -r dashboard/* ../public/dashboard/",
  "outputDirectory": "public",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/standalone/dist/index.js"
    },
    {
      "src": "/dashboard(.*)",
      "dest": "/dashboard$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}

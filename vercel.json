{
  "version": 2,
  "buildCommand": "cd standalone && npm install && npm run build && mkdir -p ../public/dashboard && cp -r dashboard/* ../public/dashboard/",
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/standalone/dist/index.js"
    },
    {
      "source": "/dashboard(.*)",
      "destination": "/dashboard$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}

{
  "version": 2,
  "buildCommand": "npm install && npm run build && mkdir -p public && cp -r dist/* public/ && mkdir -p public/dashboard && cp -r dashboard/* public/dashboard/",
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/index.js"
    },
    {
      "source": "/dashboard",
      "destination": "/dashboard/index.html"
    },
    {
      "source": "/",
      "destination": "/dashboard/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
